<%# locals: (team_name:, players: [], won: false) %>

<div class="grid grid-cols-[auto_1fr] gap-4">
  <div class="rounded-full bg-gray-100 size-14 flex flex-col justify-center">
    <p class="text-center text-gray-600"><%= team_name %></p>
  </div>

  <div class="flex flex-col justify-center">
    <p class="flex gap-2">
      Team <%= team_name %>
      <% if won %>
        <%= inline_svg_tag "icons/trophy.svg", class: "w-6 h-6 fill-secondary-300 stroke-2 text-secondary-600" %>
      <% end %>
    </p>

    <p class="font-light text-gray-600">
      <%= players.map { |mp| mp.player.name }.join(", ") %>
    </p>
  </div>
</div>
