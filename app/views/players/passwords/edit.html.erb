<%= render "application/main",
  title: "Restablecer mi contraseña" do %>
  <%= form_with model: @player, url: players_password_path(params[:id]) do |f| %>
    <div class="flex flex-col gap-2 py-4">
      <%= f.password_field :password, placeholder: "Nueva contraseña" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña" %>

      <div class="flex flex-col mt-2">
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
