<% links = [
  { name: "Partidos", path: root_path, icon: "home" },
  { name: "Nuevo Partido", path: new_match_path, icon: "plus-circle" },
  { name: "Amigos", path: players_friendships_path, icon: "users" },
  { name: "Perfil", path: players_profile_path, icon: "user-circle" }
] %>

<div class="flex flex-row border-b border-gray-900 bg-gray-50">
  <% links.each do |link| %>
    <%= link_to link[:path], title: link[:name], class: "p-3 btn btn-secondary border-b-0 border-r-0 last:border-r" do %>
      <%= inline_svg_tag "icons/#{link[:icon]}.svg", class: "w-8 h-8" %>
    <% end %>
  <% end %>

  <% if current_player_signed_in? %>
    <%= link_to players_session_path, data: { turbo_method: :delete }, class: "p-3 btn btn-secondary border-b-0 border-r-0 last:border-r" do %>
      <%= inline_svg_tag "icons/arrow-left-start-on-rectangle.svg", class: "w-8 h-8" %>
    <% end %>
  <% end %>
</div>
