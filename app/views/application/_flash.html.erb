<% if flash[:notice] || flash[:alert] %>
  <div class="pointer-events-none fixed inset-x-0 top-0 p-5">
    <div class="<%= flash[:notice].present? ? "bg-gray-900" : "bg-secondary-600" %> pointer-events-auto flex items-center justify-between gap-x-6 px-6 py-2.5 rounded-md">
      <p class="text-sm leading-6 text-white">
        <%= flash[:notice] || flash[:alert] %>
      </p>
      <button type="button" class="-m-3 flex-none p-3 focus-visible:outline-offset-[-4px]">
        <span class="sr-only">Dismiss</span>
        <%= inline_svg_tag "icons/x-mark.svg", class: "h-4 w-4 text-white" %>
      </button>
    </div>
  </div>
<% end %>
